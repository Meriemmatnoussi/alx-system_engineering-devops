#!/bin/bash

# Install nginx with the -y option to assume "yes" for prompts
sudo apt-get update
sudo apt-get install -y nginx

# Configure nginx to listen on port 80
sudo sed -i 's/80 default_server/80 default_server;/' /etc/nginx/sites-available/default

# Restart nginx
sudo service nginx restart

# Create a simple HTML file with "Hello World!"
echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null

# Verify that Nginx is serving the page correctly
curl localhost
